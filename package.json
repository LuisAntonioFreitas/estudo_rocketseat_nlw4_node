{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "",
  "keywords": [],
  "author": "",
  "scripts": {
    "start": "set NODE_ENV=production&& ts-node api/server.js",
    "prod": "set NODE_ENV=prod&& ts-node --transpile-only dist/api/server.js",
    "dev": "set NODE_ENV=dev&& ts-node-dev --ignore-watch node_modules src/server.ts",
    "test": "set NODE_ENV=test&& jest -i",
    "": "",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js", 
    "typeorm_start": "ts-node ./node_modules/typeorm/cli.js -c production",
    "typeorm_prod": "ts-node --transpile-only ./node_modules/typeorm/cli.js -c prod",
    "typeorm_dev": "ts-node-dev ./node_modules/typeorm/cli.js -c dev",
    "typeorm_test": "ts-node-dev ./node_modules/typeorm/cli.js -c test",
    "": "",
    "clean": "rimraf dist/",
    "copy-public": "copyfiles -u 1 ./public/**/* ./dist/public",
    "copy-files": "copyfiles -u 1 ./src/**/*.html ./src/**/*.css ./src/**/*.hbs ./dist/api",
    "copy-files-json": "copyfiles ./package.json ./ormconfig.json ./dist",
    "copy-files-env": "copyfiles ./.env ./dist",
    "copy-webconfig": "copyfiles -u 1 ./windows/web.config ./dist",
    "build": "yarn clean && tsc && yarn copy-public && yarn copy-files && yarn copy-files-json && yarn copy-files-env && yarn copy-webconfig"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "jest": "^26.6.3",
    "nodemailer": "^6.5.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.3",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^26.0.21",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.11",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
